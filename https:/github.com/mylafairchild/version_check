#Quick script to check version number of an app or anything else
#Would be useful for determining deployments or large departments
#Myla Fairchild

#!/bin/bash
first_version=“This needs an upgrade”
second_version=“There is no need to upgrade“
version_control=0
echo “What is the current version?”
read version_number
while [ $version_control -lt $version_number ]
do
  if [ $version_number -lt 1 ]
  then
    echo $first_version
  else
    echo $later_version
  fi
done
